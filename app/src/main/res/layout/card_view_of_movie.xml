<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ToggleButton
            android:id="@+id/favorite_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textOff=""
            android:textOn="" />

        <ImageView
            android:id="@+id/movie_picture"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/shadow_rect"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/movie_picture"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/cheky_check"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/movie_title"
            android:layout_toRightOf="@id/movie_picture"
            android:visibility="gone">


            <TextView
                android:id="@+id/title_text_movie_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/movie_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_text_movie_information"
                android:layout_centerInParent="true"
                android:layout_marginLeft="9dp" />


        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>

